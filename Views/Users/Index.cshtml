@model IEnumerable<MKsEMS.Models.User>
@using MKsEMS.Controllers
@inject CurrentUser2 _loggedInUser;

@{
    ViewData["JobTitle"] = "Index";


}

<h1>User accounts page</h1>

<div>
    @{
        if (TempData["CreateMessageFail"]!=null)
        {
            <div class="alert alert-danger">
                @TempData["CreateMessageFail"]
            </div>
        }
        if (TempData["CreateMessageSuccess"] != null)
        {
            <div class="alert alert-success">
                <h5>
                    
                    @TempData["CreateMessageSuccess"]
                </h5> 
            </div>
        }
        //if (TempData["AdminMessage"] != null)
        //{
        //    <div class="alert alert-danger">
        //        <h5>                   
        //            @TempData["AdminMessage"]
        //        </h5>
        //    </div>
        //}
    }
</div>
<p>
    @{
        if (_loggedInUser.GetLoggedInUser().IsAdmin)
        {
            <a asp-action="Create">Create a new User account</a>
        }
        else
        {
            <a asp-controller="Leaves" asp-action="Create"> Make a Leave Request </a>
      }

    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManagerEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveEntitement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveTaken)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.SickLeaveTaken)
            </th>   

            @{
                if (_loggedInUser.GetLoggedInUser().IsAdmin)
                {                             
                    <th>
                        @Html.DisplayNameFor(model => model.IsUserLoggedIn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsAdmin)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsManager)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsCEO)
                    </th>
                }
            }
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManagerEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeaveEntitement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeaveTaken)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SickLeaveTaken)
            </td>

            @{
                if (_loggedInUser.GetLoggedInUser().IsAdmin)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.IsAdmin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsManager)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsCEO)
                    </td>
            
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        @{
                            if (!_loggedInUser.GetLoggedInUser().IsAdmin)
                            {
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                            }
                        }
                
                    </td>
                }
            }
                @{
                    <td>
                
                        @{
                            if (!_loggedInUser.GetLoggedInUser().IsAdmin)
                            {
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                            }
                        }
                    </td>
                }
            
        </tr>
}
    </tbody>
</table>
