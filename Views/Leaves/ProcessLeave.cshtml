@model MKsEMS.Models.Leave
@using MKsEMS.Controllers

@{
    ViewData["Title"] = "Edit";
}
@TempData["LeaveRqMsg"] 
<h1>Edit</h1>

<h4>Process Leaves</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ProcessLeave">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group" >
                <label asp-for="UserEmail" class="control-label mb-3"></label>
                <input asp-for="UserEmail" class="form-control" readonly />
                <span asp-validation-for="UserEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManagerEmail" class="control-label mb-3"></label>
                <input asp-for="ManagerEmail" class="form-control" readonly />
                <span asp-validation-for="ManagerEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateFrom" class="control-label mb-3"></label>
                <input asp-for="DateFrom" class="form-control" value="@Model.DateFrom.ToString("yyyy-MM-dd")" readonly />
                <span asp-validation-for="DateFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTo" class="control-label mb-3"></label>
                <input asp-for="DateTo" class="form-control" value="@Model.DateTo.ToString("yyyy-MM-dd")" readonly />
                <span asp-validation-for="DateTo" class="text-danger"></span>
            </div>           
            <div class="form-group">
                <label asp-for="LeaveType" class="control-label mb-3"></label>
                <input asp-for="LeaveType" class="form-control" readonly />
                <span asp-validation-for="LeaveType" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Status" class="control-label mb-3"></label>
                @Html.DropDownList("Status",ViewModelData.GetLeaveStatusSelectList(),"Select",new {@class = "form-control"})
                
                <span asp-validation-for="DenialReason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DenialReason" class="control-label mb-3 mt-3"></label>
                <input asp-for="DenialReason" class="form-control" />
                <span asp-validation-for="DenialReason" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
