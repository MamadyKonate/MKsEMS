@model MKsEMS.Models.Leave
@using MKsEMS.Controllers

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Leave</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            @{
                if (!CurrentUser.GetLoggedInUser.IsAdmin)
                {
                    <label asp-for="UserEmail" class="control-label">Your email </label>
                    <input type="text" name="UserEmail" value="@CurrentUser.GetLoggedInUser.Email" readonly>

                    <br>
                }
                else
                {
                    <label asp-for="UserEmail" class="control-label">User Email </label>
                    @Html.DropDownList("UserEmail",ViewModelData.GetUsersEmailsSelectList(),"Select",new {@class = "form-control"})
                    //<input asp-for="UserEmail" class="form-control" />
                }
            }

           
@*
            <div class="form-group">
                <label asp-for="UserEmail" class="control-label"></label>
                <input asp-for="UserEmail" class="form-control" />
                <span asp-validation-for="UserEmail" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Allowance" class="control-label"></label>
                <input asp-for="Allowance" class="form-control" />
                <span asp-validation-for="Allowance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Taken" class="control-label"></label>
                <input asp-for="Taken" class="form-control" />
                <span asp-validation-for="Taken" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="LeaveTypeId" class="control-label"></label>
                <input asp-for="LeaveTypeId" class="form-control" />
                <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
            </div>
            <div class="form-group form-check" hidden>
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="LeaveStatus" /> @Html.DisplayNameFor(model => model.LeaveStatus)
                </label>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
