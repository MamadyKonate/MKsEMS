@model MKsEMS.Models.Leave
@using MKsEMS.Controllers

@{
    ViewData["Title"] = "Create";
}

<h1>Make a Leave request</h1>

<h4>@{
        if( TempData["LeaveRqMsg"] != null)
        {
            <div class="alert-danger">@TempData["LeaveRqMsg"]</div>
        }
        
}</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group mb-3">
            @{
                if (!CurrentUser.GetLoggedInUser.IsAdmin)
                {
                        <label asp-for="UserEmail" class="control-label">Your email </label>
                    <input type="text" name="UserEmail" value="@CurrentUser.GetLoggedInUser.Email" readonly>

                    <br>
                }
                else
                {
                        <label asp-for="UserEmail" class="control-label">User Email </label>
                        @Html.DropDownList("UserEmail",ViewModelData.GetUsersEmailsSelectList(),"Select",new {@class = "form-control"})
                    //<input asp-for="UserEmail" class="form-control" />
                }
            }
            </div>
            <div class="form-group mb-3">
                @{
                    if (!CurrentUser.GetLoggedInUser.IsAdmin)
                    {
                        <label asp-for="ManagerEmail" class="control-label">Your email </label>
                        <input type="text" name="UserEmail" value="@CurrentUser.GetLoggedInUser.ManagerEmail" readonly>

                        <br>
                    }
                    else
                    {
                        <label asp-for="ManagerEmail" class="control-label"></label>
                        @Html.DropDownList("ManagerEmail",ViewModelData.GetUsersManagerEmailsSelectList(),"Select",new {@class = "form-control"})
                        //<input asp-for="UserEmail" class="form-control" />
                    }
                }
                
            </div>

            
            
            <div class="form-group mb-3">
                <label asp-for="DateFrom" class="control-label"></label>
                <input asp-for="DateFrom" class="form-control" />
                <span asp-validation-for="DateFrom" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DateTo" class="control-label"></label>
                <input asp-for="DateTo" class="form-control" />
                <span asp-validation-for="DateTo" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Allowance" class="control-label"></label>
                <input type="text" name="Allowance" value="@CurrentUser.GetLoggedInUser.LeaveEntitement" readonly>
               
            </div>
            <div class="form-group" >
                <label asp-for="Taken" class="control-label"></label>
                <input type="text" name="Taken" value="@CurrentUser.GetLoggedInUser.LeaveTaken" readonly>>
            </div>
            <div class="form-group mb-3">
                <label asp-for="LeaveType" class="control-label"></label>
                @Html.DropDownList("LeaveType",ViewModelData.GetLeaveTypesSelectList(),"Select",new {@class = "form-control"})
                <span asp-validation-for="LeaveType" class="text-danger"></span>
            </div>
            <div class="form-group form-check" hidden>
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="LeaveStatus" value="0" /> @Html.DisplayNameFor(model => model.LeaveStatus)
                </label>
            </div>
            <div class="form-group" hidden>
                <label asp-for="DenialReason" class="control-label"></label>
                <input asp-for="DenialReason" class="form-control" value="none"/>
                <span asp-validation-for="DenialReason" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
